# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
curly_bracket_next_line = false
spaces_around_operators = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.sh]
spaces_around_operators = false

[*.cs]
curly_bracket_next_line = true

[*.sln]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON Files
[*.{json,json5}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{xml,config}]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf
